<?xml version="1.0" encoding="UTF-8" ?>

<!-- McDonnell Douglas DC-10 -->
<!-- Aircraft property settings common to all variants -->

<PropertyList>

	<sim>
		<author>Ryan Miller (3d), Ryan Miller (FDM)</author>
		<status>alpha</status>

		<model>
			<livery>
				<registration type="string" />
				<has-center-gear type="bool">true</has-center-gear>
			</livery>
			<pushback>
				<kp type="double">0.05</kp>
				<ti type="double">10</ti>
				<td type="double">0.00001</td>
			</pushback>
		</model>

		<instrumentation>
			<path>Aircraft/DC-10-30/Systems/DC-10-instrumentation.xml</path>
		</instrumentation>

		<sound>
			<path>Aircraft/DC-10-30/Sounds/DC-10-external-sound.xml</path>
		</sound>

		<systems>
			<!-- Disable the generic electrical system -->
			<electrical>
				<path></path>
			</electrical>
			<autopilot>
				<name>Flight controls</name>
				<path>Aircraft/DC-10-30/Systems/DC-10-flight-controls.xml</path>
			</autopilot>
			<autopilot>
				<name>Pushback</name>
				<path>Aircraft/DC-10-30/Systems/pushback.xml</path>
			</autopilot>
		</systems>

		<view n="0">
			<name>Captain View</name>
			<internal type="bool" archive="y">true</internal>
			<config>
				<x-offset-m archive="y">-0.54</x-offset-m>
				<y-offset-m archive="y">6.06</y-offset-m>
				<z-offset-m archive="y">-25.1</z-offset-m>
			</config>
		</view>
		<view n="100">
			<name>First Officer View</name>
			<type>lookfrom</type>
			<internal type="bool" archive="y">true</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">0.54</x-offset-m>
				<y-offset-m archive="y">6.06</y-offset-m>
				<z-offset-m archive="y">-25.1</z-offset-m>
			</config>
		</view>
		<chase-distance-m type="double">-70</chase-distance-m>

		<flaps>
			<setting>0.00</setting>	<!-- 0 -->
			<setting>0.30</setting>	<!-- 15 -->
			<setting>0.44</setting>	<!-- 22 -->
			<setting>0.70</setting>	<!-- 35 -->
			<setting>1.00</setting>	<!-- 50 -->
		</flaps>
		<speedbrakes>
			<setting>0.00</setting>	<!-- 0% -->
			<setting>0.20</setting>	<!-- 33% -->
			<setting>0.40</setting>	<!-- 67% -->
			<setting>0.60</setting>	<!-- 100% / Ground spoilers 0% -->
		</speedbrakes>
		<spoilers>
			<setting>0.00</setting>	<!-- Speedbrakes 0% -->
			<setting>0.60</setting>	<!-- 0% / Speedbrakes 100% -->
			<setting>0.80</setting>	<!-- 50% -->
			<setting>1.00</setting>	<!-- 100% -->
		</spoilers>

		<weight n="0">
			<name>Crew</name>
			<weight-lb>250</weight-lb>
			<max-lb>600</max-lb>
			<min-lb>120</min-lb>
		</weight>
		<weight n="1">
			<weight-lb>100000</weight-lb>
			<max-lb>142700</max-lb>
			<min-lb>0</min-lb>
		</weight>

		<menubar>
			<default>
				<menu n="100">
					<enabled type="bool">true</enabled>
					<item>
						<label>Autostart</label>
						<binding>
							<command>property-toggle</command>
							<property>sim/model/start-idling</property>
						</binding>
					</item>
					<item>
						<label>Select Livery</label>
						<binding>
							<command>nasal</command>
							<script>
							 aircraft.livery.dialog.open();
							</script>
						</binding>
					</item>
					<item>
						<label>Pushback</label>
						<binding>
							<command>dialog-show</command>
							<dialog-name>pushback</dialog-name>
						</binding>
					</item>
					<item>
						<label>Lights</label>
						<binding>
							<command>nasal</command>
							<script>
							 DC10.dialogs.lights.open();
							</script>
						</binding>
					</item>
					<item>
						<label>Doors</label>
						<binding>
							<command>nasal</command>
							<script>
							 DC10.dialogs.doors.open();
							</script>
						</binding>
					</item>
					<item>
						<label>Failures</label>
						<binding>
							<command>nasal</command>
							<script>
							 DC10.dialogs.failures.open();
							</script>
						</binding>
					</item>
					<item>
						<label>Tiller steering</label>
						<binding>
							<command>nasal</command>
							<script>
							 DC10.dialogs.tiller.open();
							</script>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>

		<multiplay>
			<generic>
				<float n="0" alias="/sim/model/door-positions/pax-l1/position-norm" />		<!-- PAX door L1 -->
				<float n="1" alias="/sim/model/door-positions/pax-l2/position-norm" />		<!-- PAX door L2 -->
				<float n="2" alias="/sim/model/door-positions/pax-l3/position-norm" />		<!-- PAX door L3 -->
				<float n="3" alias="/sim/model/door-positions/pax-l4/position-norm" />		<!-- PAX door L4 -->
				<float n="4" alias="/sim/model/door-positions/pax-r1/position-norm" />		<!-- PAX door R1 -->
				<float n="5" alias="/sim/model/door-positions/pax-r2/position-norm" />		<!-- PAX door R2 -->
				<float n="6" alias="/sim/model/door-positions/pax-r3/position-norm" />		<!-- PAX door R3 -->
				<float n="7" alias="/sim/model/door-positions/pax-r4/position-norm" />		<!-- PAX door R4 -->
				<float n="8" alias="/sim/model/door-positions/cargo-fwd/position-norm" />	<!-- Forward cargo door -->
				<float n="9" alias="/sim/model/door-positions/cargo-aft/position-norm" />	<!-- Aft cargo door -->
				<float n="10" alias="/sim/model/door-positions/cargo-main/position-norm" />	<!-- Main cargo door -->
				<float n="11" alias="/engines/engine[0]/reverser-pos-norm" />			<!-- Engine 1 reverser -->
				<float n="12" alias="/engines/engine[1]/reverser-pos-norm" />			<!-- Engine 2 reverser -->
				<float n="13" alias="/engines/engine[2]/reverser-pos-norm" />			<!-- Engine 3 reverser -->
				<float n="14" alias="/sim/model/door-positions/boom/position-norm" />		<!-- [KC-10A] Tanker boom -->

				<int n="0" alias="/systems/electrical/outputs/nav-lights" />			<!-- Navigation lights -->
				<int n="1" alias="/systems/electrical/outputs/beacon[0]" />			<!-- Top anti-collision beacon -->
				<int n="2" alias="/systems/electrical/outputs/beacon[1]" />			<!-- Bottom anti-collision beacon -->
				<int n="3" alias="/systems/electrical/outputs/strobe[0]" />			<!-- Front strobe lights -->
				<int n="4" alias="/systems/electrical/outputs/strobe[1]" />			<!-- Rear trobe lights -->
				<int n="5" alias="/systems/electrical/outputs/landing-light-port" />		<!-- Port landing light -->
				<int n="6" alias="/systems/electrical/outputs/landing-light-nose[0]" />		<!-- Nose landing light (fuselage) -->
				<int n="7" alias="/systems/electrical/outputs/landing-light-nose[1]" />		<!-- Nose landing light (nose gear) -->
				<int n="8" alias="/systems/electrical/outputs/landing-light-stbd" />		<!-- Starboard landing light -->
				<int n="9" alias="/systems/electrical/outputs/logo-lights" />			<!-- Logo lights -->

				<string n="0" alias="/sim/model/configuration" />				<!-- [DC-10-30CF] Aircraft configuration -->
			</generic>
		</multiplay>
	</sim>

	<consumables>
		<fuel>
			<tank n="0">
				<name>LH Inner</name>
			</tank>
			<tank n="1">
				<name>LH Outer</name>
			</tank>
			<tank n="2">
				<name>RH Inner</name>
			</tank>
			<tank n="3">
				<name>RH Outer</name>
			</tank>
			<tank n="4">
				<name>Center Main</name>
			</tank>
			<tank n="5">
				<name>Center Aux</name>
			</tank>
		</fuel>
	</consumables>

	<controls>
		<flight>
			<outboard-ailerons type="bool">true</outboard-ailerons>
		</flight>
		<gear>
			<brake-parking type="bool">true</brake-parking>
			<center-gear-down type="bool">true</center-gear-down>
			<enable-tiller type="bool" archive="y">true</enable-tiller>
			<isolate-center-gear type="bool">false</isolate-center-gear>
			<steering-deg type="double">0</steering-deg>
			<tiller-steer-deg type="double">0</tiller-steer-deg>
		</gear>
	</controls>

	<engines>
		<engine n="0">
			<rpm type="double">0</rpm>
		</engine>
		<engine n="1">
			<rpm type="double">0</rpm>
		</engine>
	</engines>

	<instrumentation>
		<altimeter n="1">
			<serviceable type="bool">true</serviceable>
		</altimeter>
		<airspeed-indicator n="1">
			<serviceable type="bool">true</serviceable>
		</airspeed-indicator>
		<attitude-indicator n="1">
			<serviceable type="bool">true</serviceable>
		</attitude-indicator>
		<clock>
			<indicated-timezone type="string">gmt</indicated-timezone>
		</clock>
		<clock>
			<indicated-timezone type="string">local</indicated-timezone>
			<serviceable type="bool">true</serviceable>
		</clock>
		<dme n="1">
			<frequencies>
				<source>/instrumentation/nav[1]/frequencies/selected-mhz</source>
			</frequencies>
			<serviceable type="bool">true</serviceable>
		</dme>
		<nav-compass n="0">
			<nav-display n="0" type="int">0</nav-display>
			<nav-display n="1" type="int">0</nav-display>
		</nav-compass>
		<nav-compass n="1">
			<nav-display n="0" type="int">0</nav-display>
			<nav-display n="1" type="int">0</nav-display>
		</nav-compass>
	</instrumentation>

	<input>
		<keyboard>
			<!-- Speedbrake/spoiler control -->
			<key n="2">
				<name>Ctrl-b</name>
				<desc>Cycle speedbrakes</desc>
				<binding>
					<command>property-cycle</command>
					<property>controls/flight/spoilers</property>
					<value alias="/sim/speedbrakes/setting[0]" />
					<value alias="/sim/speedbrakes/setting[1]" />
					<value alias="/sim/speedbrakes/setting[2]" />
					<value alias="/sim/speedbrakes/setting[3]" />
				</binding>
			</key>
			<!-- Tiller steering -->
			<key n="81">
				<name>Q</name>
				<desc>Steer tiller full left</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/gear/tiller-steering-deg</property>
					<value>-68</value>
				</binding>
			</key>
			<key n="113">
				<name>q</name>
				<desc>Steer tiller left</desc>
				<repeatable type="bool">true</repeatable>
				<binding>
					<command>property-adjust</command>
					<property>controls/gear/tiller-steering-deg</property>
					<step>-8.5</step>
					<min>-68</min>
				</binding>
			</key>
			<key n="119">
				<name>w</name>
				<desc>Center tiller</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/gear/tiller-steering-deg</property>
					<value>0</value>
				</binding>
			</key>
			<key n="87">
				<name>W</name>
				<desc>Open tiller dialog</desc>
				<binding>
					<command>nasal</command>
					<script>
					 DC10.dialogs.tiller.open();
					</script>
				</binding>
			</key>
			<key n="101">
				<name>e</name>
				<desc>Steer tiller right</desc>
				<repeatable type="bool">true</repeatable>
				<binding>
					<command>property-adjust</command>
					<property>controls/gear/tiller-steering-deg</property>
					<step>8.5</step>
					<max>68</max>
				</binding>
			</key>
			<key n="69">
				<name>E</name>
				<desc>Steer tiller full right</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/gear/tiller-steering-deg</property>
					<value>68</value>
				</binding>
			</key>
			<!-- Reverse thrust -->
			<key n="127">
				<name>Delete</name>
				<desc>Toggle reverse thrust</desc>
				<binding>
					<command>nasal</command>
					<script>
					 DC10.engine1.reverse_thrust();
					 DC10.engine2.reverse_thrust();
					 DC10.engine3.reverse_thrust();
					</script>
				</binding>
			</key>
		</keyboard>
	</input>

	<nasal>
		<DC10>
			<file>Aircraft/DC-10-30/Nasal/electrical.nas</file>
			<file>Aircraft/DC-10-30/Nasal/engines.nas</file>
			<file>Aircraft/DC-10-30/Nasal/effects.nas</file>
			<file>Aircraft/DC-10-30/Nasal/doors.nas</file>
			<file>Aircraft/DC-10-30/Nasal/systems.nas</file>
		</DC10>
	</nasal>

</PropertyList>
