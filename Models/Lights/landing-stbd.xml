<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>landing.ac</path>

	<animation>
		<name>On/off</name>
		<type>select</type>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/landing-light-stbd</property>
				<value>5</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<name>Cone on/off</name>
		<type>select</type>
		<object-name>Cone</object-name>
		<object-name>Cone-texture</object-name>
		<condition>
			<property>controls/lighting/cones</property>
		</condition>
	</animation>
	<animation>
		<type>flash</type>
		<object-name>Light</object-name>
		<power>10</power>
		<factor>3</factor>
		<min>1</min>
		<max>6</max>
		<two-sides type="bool">false</two-sides>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<effect>
		<inherits-from>Effects/light-cone</inherits-from>
		<object-name>Cone</object-name>
		<object-name>Cone-texture</object-name>
	</effect>

</PropertyList>
