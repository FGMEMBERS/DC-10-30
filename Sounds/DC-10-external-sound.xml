<?xml version="1.0" encoding="UTF-8" ?>

<!-- McDonnell Douglas DC-10 -->
<!-- External sound configuration -->

<PropertyList>

    <fx>
        <!-- Engine 1 sound -->
        <engine>
            <name>Engine 1 sound 1 external</name>
            <path>Sounds/whine.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.085</factor>
              <max>1.0</max>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <offset>0.01</offset>
                <factor>0.02</factor>
            </pitch>

                <x>-1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>

        </engine>
        <engine>
            <name>Engine 1 sound 2 external</name>
            <path>Sounds/jet.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.004</factor>
              <max>2.0</max>
           </volume>
           <pitch>
             <property>/engines/engine[1]/n1</property>
             <factor>1.0</factor>
             <offset>0.0</offset>
           </pitch>
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>
            </engine>
        
          <engine>
            <name>Engine 1 sound 3 external</name>
            <path>Sounds/fan.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.010</factor>
              <max>0.50</max>
           </volume>
           <pitch>
             <property>/engines/engine[1]/n1</property>
             <factor>0.03</factor>
             <offset>0.1</offset>
           </pitch>
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>
            </engine>

        <engine>
            <name>Engine 1 reverse thrust</name>
            <path>Sounds/exhaust_loop.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine[0]/reverser-pos-norm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <offset>0</offset>
                <factor>0.01</factor>
            </pitch>
        </engine>
        <!-- Engine 2 sound -->
        <engine>
            <name>Engine 2 sound 1 external</name>
            <path>Sounds/whine.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[1]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.085</factor>
              <max>1.0</max>
            </volume>
            <pitch>
              <property>/engines/engine[1]/n1</property>
              <factor>0.01</factor>
              <offset>0.02</offset>
           </pitch>
            
                <x>-1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>
           
        </engine>
        <engine>
            <name>Engine 2 sound 2 external</name>
            <path>Sounds/jet.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[1]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.004</factor>
              <max>2.0</max>
           </volume>
           <pitch>
              <property>/engines/engine[1]/n1</property>
              <factor>1.0</factor>
              <offset>0.00</offset>
           </pitch>
            
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>

          <engine>
            <name>Engine 2 sound 3 external</name>
            <path>Sounds/fan.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.010</factor>
              <max>0.50</max>
           </volume>
           <pitch>
             <property>/engines/engine[1]/n1</property>
             <factor>0.03</factor>
             <offset>0.1</offset>
           </pitch>
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>
            </engine>

            
        </engine>
        <engine>
            <name>Engine 2 reverse thrust</name>
            <path>Sounds/exhaust_loop.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>engines/engine[1]/rpm</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine[1]/reverser-pos-norm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <pitch>
                <property>engines/engine[1]/rpm</property>
                <offset>0</offset>
                <factor>0.01</factor>
            </pitch>
        </engine>
        <!-- Engine 3 sound -->
        <engine>
            <name>Engine 3 sound 1 external</name>
            <path>Sounds/whine.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.085</factor>
              <max>0.95</max>
            </volume>
            <pitch>
                <property>engines/engine[0]/rpm</property>
                <offset>0.01</offset>
                <factor>0.02</factor>
            </pitch>

                <x>-1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>

            
        </engine>
        <engine>
            <name>Engine 3 sound 2 external</name>
            <path>Sounds/jet.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[2]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.004</factor>
              <max>1.75</max>
           </volume>
           <pitch>
              <property>/engines/engine[1]/n1</property>
              <factor>1.0</factor>
              <offset>0.00</offset>
           </pitch>
            
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>

          <engine>
            <name>Engine 3 sound 3 external</name>
            <path>Sounds/fan.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine[0]/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine[1]/n1</property>
              <factor>0.010</factor>
              <max>.44</max>
           </volume>
           <pitch>
             <property>/engines/engine[1]/n1</property>
             <factor>0.03</factor>
             <offset>0.1</offset>
           </pitch>
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>
            </engine>

            
        </engine>
        <engine>
            <name>Engine 3 reverse thrust</name>
            <path>Sounds/exhaust_loop.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>engines/engine[2]/rpm</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine[2]/reverser-pos-norm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <pitch>
                <property>engines/engine[2]/rpm</property>
                <offset>0.1</offset>
                <factor>0.01</factor>
            </pitch>
        </engine>

        <!-- Landing gear -->
        <gear>
            <name>Gear in transit</name>
            <path>Sounds/flaps.wav</path>
            <mode>in-transit</mode>
            <property>gear/gear[0]/position-norm</property>
        </gear>
        <gear>
            <name>Gear door close</name>
            <path>Sounds/door_close.wav</path>
            <mode>once</mode>
            <condition>
                <or>
                    <equals>
                        <property>gear/gear[0]/position-norm</property>
                        <value>0</value>
                    </equals>
                    <equals>
                        <property>gear/gear[0]/position-norm</property>
                        <value>1</value>
                    </equals>
                </or>
            </condition>
        </gear>

        <foo include="DC-10-internal-sound.xml" omit-node="y" />
    </fx>

</PropertyList>
